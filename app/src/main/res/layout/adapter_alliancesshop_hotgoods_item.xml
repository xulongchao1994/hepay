<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d9d9d9"
    android:padding="2dp">


    <ImageView
        android:id="@+id/alliancesshop_hotgoods_item_icon"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@mipmap/hetianpay_ic_round"/>

    <TextView
        android:id="@+id/allianceshop_hotgoods_item_zhekou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/redpcketlistitem"
        android:padding="3dp"
        android:text="代金券抵2.0"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/alliancesshop_hotgoods_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/alliancesshop_hotgoods_item_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/alliancesshop_hotgoods_item_name">

        <TextView
            android:id="@+id/alliancesshop_hotgoods_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/order_moeny_text"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/alliancesshop_hotgoods_item_shichangprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:textSize="14sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>