<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alliancesshop_hotshop_item_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/alliancesshop_hotshop_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:id="@+id/alliancesshop_hotshop_item_zhekoulayout"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/alliancesshop_hotshop_item_zhekoutext"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#F29413"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <ImageView
                        android:id="@+id/alliancesshop_hotshop_item_zhekouicon"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/alliance_shop_zhekou"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/alliancesshop_hotshop_item_howpeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/alliancesshop_hotshop_item_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"/>

                <TextView
                    android:id="@+id/alliancesshop_hotshop_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_1dp_h"/>
</LinearLayout>