<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/adapter_userorderitem_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FAFAFA"
              android:orientation="vertical">

    <include layout="@layout/view_cut_off_rule"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adapter_allorderitem_icon"
            android:layout_width="@dimen/userorderitme_icon_width"
            android:layout_height="@dimen/userorderitem_icon_htight"
            android:layout_margin="@dimen/userorderitem_icon_margin"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/userorderitem_icon_htight"
            android:layout_marginLeft="@dimen/userorderitem_layout_marginleft"
            android:layout_marginTop="@dimen/userorderitem_layout_margintop"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/adapter_allorderitem_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/orderinfo_guige"/>

                <TextView
                    android:id="@+id/adapter_allorderitem_stylename"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/adapter_allorderitem_pronumber"
                    android:layout_width="@dimen/userorderitem_pronumber_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="@dimen/userorderitem_pronumber_textsize"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/orderinfo_price"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/adapter_allorderitem_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/title_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adapter_allorderitem_proname_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/orderinfo_shorename"/>

                <TextView
                    android:id="@+id/adapter_allorderitem_proname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>