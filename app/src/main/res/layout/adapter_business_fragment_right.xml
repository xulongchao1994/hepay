<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/adapter_business_fiagment_goods_right_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@mipmap/hetianpay_ic_round"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_business_fiagment_goods_right_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="南瓜粥"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/adapter_business_fiagment_goods_right_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1.00"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/adapter_business_fiagment_goods_right_zhekou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/redpcketlistitem"
                android:padding="2dp"
                android:text="代金券抵2.0"
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/adapter_business_fragment_goods_right_guige"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/business_right_guige_button"
                android:text="选规格"
                android:textColor="@color/white"
                android:textSize="12sp"/>
            <!--放在加的图标前面-->
            <RelativeLayout
                android:id="@+id/adapter_business_fragment_goods_right_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/adapter_business_fiagment_goods_right_reduce"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@id/adapter_business_fiagment_goods_right_add"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@id/adapter_business_fiagment_goods_right_count"
                    android:src="@drawable/icon_goods_reduce"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/adapter_business_fiagment_goods_right_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_goods_add"/>

                <TextView
                    android:id="@+id/adapter_business_fiagment_goods_right_count"
                    android:layout_width="25dp"
                    android:layout_height="24dp"
                    android:layout_alignTop="@id/adapter_business_fiagment_goods_right_add"
                    android:layout_toLeftOf="@id/adapter_business_fiagment_goods_right_add"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>