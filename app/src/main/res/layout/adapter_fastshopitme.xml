<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adapter_fastshop_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/adapter_fastshop_shopname_laout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adapter_fastshop_shopname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:id="@+id/adapter_fastshop_zhekoulayout"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/adapter_fastshop_zhekoutext"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="#F29413"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>

                    <ImageView
                        android:id="@+id/adapter_fastshop_zhekouicon"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/alliance_shop_zhekou"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adapter_fastshop_shopcontent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/adapter_fastshop_juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/adapter_fastshop_addres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>