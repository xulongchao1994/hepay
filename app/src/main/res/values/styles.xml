<!--suppress AndroidDomInspection -->
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="start_app" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowBackground">@drawable/startapp_img</item>
    </style>

    <style name="start_activity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/activity_icon</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="hechuangshop_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/appbar</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="adapter_fastshop_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:background">@drawable/fastshop_text_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="adapter_storeinfo_shuaka">
        <item name="android:background">@drawable/fastshop_text_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="storeinfo_shuaka">
        <item name="android:background">@drawable/fastshop_text_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="activity_button_rt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/activity_main_button_paing</item>
        <item name="android:textColor">@drawable/main_home_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="orderinfo_tiem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/orderinfo_time_textsize</item>
        <item name="android:layout_marginTop">@dimen/orderinfo_time_marginTop</item>
    </style>

    <style name="MyCustomTabLayout">
        <!-- 改变指示器下标的颜色-->
        <item name="tabIndicatorColor">@color/appbar</item>
        <!-- 改变选中字体的颜色-->
        <item name="tabSelectedTextColor">@color/appbar</item>
        <!-- 改变未选中字体的颜色-->
        <item name="tabTextColor">#030015</item>
    </style>
</resources>
